/* Global Styles */
:root {
    --primary-color: #2c5f2d;
    --primary-dark: #1e4a22;
    --accent-color: #FFD700;
    --text-color: #333;
    --light-text: #666;
    --bg-color: #ffffff;
    --card-bg: #ffffff;
    --section-bg: #f9f9f9;
    --header-bg: linear-gradient(135deg, #2c5f2d 0%, #3d7a3d 100%);
    --nav-text: white;
    --border-color: rgba(255, 255, 255, 0.3);
}

[data-theme="dark"] {
    --primary-color: #4cae4f;
    --primary-dark: #2c5f2d;
    --accent-color: #FFD700;
    --text-color: #e0e0e0;
    --light-text: #aaa;
    --bg-color: #121212;
    --card-bg: #1e1e1e;
    --section-bg: #181818;
    --header-bg: #1f1f1f;
    --nav-text: #e0e0e0;
    --border-color: #444;
}

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    line-height: 1.6;
    color: var(--text-color);
    background-color: var(--bg-color);
    overflow-x: hidden;
    transition: background-color 0.3s ease, color 0.3s ease;
}

/* Header */
header {
    background: var(--header-bg);
    color: var(--nav-text);
    padding: 0.8rem 1rem;
    position: fixed;
    width: 100%;
    top: 0;
    z-index: 1000;
    box-shadow: 0 2px 15px rgba(0, 0, 0, 0.15);
    transition: background 0.3s ease;
}

nav {
    max-width: 1400px;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 1rem;
}

.logo {
    font-size: 1.2rem;
    font-weight: bold;
    display: flex;
    align-items: center;
    gap: 12px;
    text-decoration: none;
    color: inherit;
}

.logo img {
    height: 50px;
    width: auto;
}

.logo-text {
    display: flex;
    flex-direction: column;
    line-height: 1.2;
}

.logo-text strong {
    font-size: 1rem;
}

.logo-text small {
    font-size: 0.7rem;
    opacity: 0.9;
}

.nav-links {
    display: flex;
    gap: 1.2rem;
    list-style: none;
    flex-wrap: wrap;
}

.nav-links a {
    color: var(--nav-text);
    text-decoration: none;
    transition: all 0.3s;
    font-weight: 500;
    padding: 0.5rem 0;
    position: relative;
    font-size: 0.95rem;
}

.nav-links a::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 0;
    height: 2px;
    background: #FFD700;
    transition: width 0.3s;
}

.nav-links a:hover::after {
    width: 100%;
}

.nav-links a:hover {
    color: var(--accent-color);
}

/* Nav Actions */
.nav-actions {
    display: flex;
    align-items: center;
    gap: 10px;
    margin-left: 15px;
}

.icon-btn,
.lang-btn {
    background: rgba(255, 255, 255, 0.1);
    border: 1px solid var(--border-color);
    color: var(--nav-text);
    padding: 5px 10px;
    border-radius: 5px;
    cursor: pointer;
    font-size: 0.9rem;
    transition: all 0.3s;
}

.icon-btn:hover,
.lang-btn:hover {
    background: var(--accent-color);
    color: #333;
    border-color: var(--accent-color);
}

.menu-toggle {
    display: none;
    background: none;
    border: none;
    color: white;
    font-size: 1.5rem;
    cursor: pointer;
}

/* Hero Section */
/* Hero Section Redesign */
.hero {
    background: radial-gradient(circle at 70% 50%, rgba(44, 95, 45, 0.95), rgba(30, 74, 34, 1)), url('assets/images/pattern_bg.png');
    background-size: cover;
    color: white;
    padding: 140px 1.5rem 80px;
    margin-top: 60px;
    overflow: hidden;
    position: relative;
    min-height: 90vh;
    display: flex;
    align-items: center;
}

.hero-container {
    max-width: 1400px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
    position: relative;
    z-index: 2;
}

/* Background Elements for Depth */
.hero::before {
    content: '';
    position: absolute;
    top: -10%;
    right: -10%;
    width: 600px;
    height: 600px;
    background: radial-gradient(circle, rgba(255, 215, 0, 0.15) 0%, transparent 70%);
    border-radius: 50%;
    z-index: 1;
}

.hero-text {
    text-align: left;
    max-width: 650px;
}

.hero h1 {
    font-size: clamp(2.5rem, 5vw, 4rem);
    margin-bottom: 1.5rem;
    font-weight: 800;
    line-height: 1.1;
    letter-spacing: -1px;
    text-shadow: 0 2px 10px rgba(0, 0, 0, 0.2);
}

.hero p {
    font-size: clamp(1.1rem, 2vw, 1.3rem);
    margin-bottom: 2.5rem;
    opacity: 0.95;
    line-height: 1.6;
    max-width: 90%;
}

.cta-buttons {
    display: flex;
    gap: 1.5rem;
    justify-content: flex-start;
}

/* Creative Image Placement */
.hero-image-wrapper {
    position: relative;
    display: flex;
    justify-content: center;
}

.image-frame {
    position: relative;
    width: 100%;
    max-width: 550px;
    border-radius: 30px;
    overflow: hidden;
    box-shadow: 20px 20px 60px rgba(0, 0, 0, 0.3),
        -5px -5px 20px rgba(255, 255, 255, 0.1);
    transform: perspective(1000px) rotateY(-5deg) rotateX(2deg);
    transition: transform 0.5s ease;
    background: rgba(255, 255, 255, 0.05);
    padding: 10px;
    backdrop-filter: blur(5px);
    border: 1px solid rgba(255, 255, 255, 0.2);
}

.image-frame:hover {
    transform: perspective(1000px) rotateY(0deg) rotateX(0deg) scale(1.02);
}

.hero-img {
    width: 100%;
    height: auto;
    border-radius: 20px;
    display: block;
    filter: brightness(1.1) contrast(1.1);
    /* Enhance image quality visually */
}

/* Floating Badge Effect (Optional Polish) */
.hero-image-wrapper::after {
    content: '"HOPE"';
    position: absolute;
    bottom: 40px;
    right: -20px;
    background: #FFD700;
    color: #2c5f2d;
    padding: 0.5rem 1.5rem;
    font-weight: bold;
    font-size: 1.2rem;
    border-radius: 50px;
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
    transform: rotate(-5deg);
    z-index: 3;
    animation: floatBadge 3s ease-in-out infinite;
}

@keyframes floatBadge {

    0%,
    100% {
        transform: translateY(0) rotate(-5deg);
    }

    50% {
        transform: translateY(-10px) rotate(-5deg);
    }
}

@media (max-width: 992px) {
    .hero-container {
        grid-template-columns: 1fr;
        text-align: center;
        gap: 3rem;
    }

    .hero-text {
        text-align: center;
        margin: 0 auto;
    }

    .hero p {
        margin: 0 auto 2.5rem;
    }

    .cta-buttons {
        justify-content: center;
    }

    .image-frame {
        transform: none;
        max-width: 450px;
        margin: 0 auto;
    }

    .image-frame:hover {
        transform: scale(1.02);
    }
}

.btn {
    padding: 0.9rem 2rem;
    border: none;
    border-radius: 50px;
    font-size: 0.95rem;
    cursor: pointer;
    transition: all 0.3s ease;
    text-decoration: none;
    display: inline-block;
    font-weight: 600;
}

.btn-primary {
    background: #FFD700;
    color: #2c5f2d;
}

.btn-secondary {
    background: transparent;
    color: white;
    border: 2px solid white;
}

.btn:hover {
    transform: translateY(-3px);
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.25);
}

.btn-primary:hover {
    background: #ffdd33;
    box-shadow: 0 10px 25px rgba(255, 215, 0, 0.4);
}

.btn-secondary:hover {
    background: white;
    color: #2c5f2d;
}

/* Container */
.container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 3rem 1.5rem;
}

.section {
    margin-bottom: 2rem;
}

.section-title {
    font-size: clamp(1.8rem, 4vw, 2.5rem);
    color: var(--primary-color);
    margin-bottom: 1rem;
    text-align: center;
    font-weight: 700;
}

.section-subtitle {
    text-align: center;
    color: var(--light-text);
    max-width: 800px;
    margin: 0 auto 2rem;
    font-size: clamp(0.95rem, 2vw, 1.1rem);
}

/* About Section */
.about-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
    align-items: start;
}

.about-text {
    background: var(--section-bg);
    padding: 2rem;
    border-radius: 15px;
    border-left: 5px solid var(--primary-color);
}

.about-text h3 {
    color: var(--primary-color);
    font-size: clamp(1.2rem, 3vw, 1.5rem);
    margin-bottom: 1rem;
}

.about-text p {
    color: var(--light-text);
    margin-bottom: 1rem;
    font-size: 0.95rem;
}

.vision-mission-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1.5rem;
}

.vm-card {
    background: var(--section-bg);
    padding: 2rem;
    border-radius: 15px;
    border-top: 4px solid var(--accent-color);
}

.vm-card h3 {
    color: #2c5f2d;
    margin-bottom: 1rem;
    font-size: clamp(1.1rem, 2.5vw, 1.4rem);
}

.vm-card p {
    color: var(--light-text);
    font-size: 0.9rem;
}

/* Values Section */
.values-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1.5rem;
    margin-top: 2rem;
}

.value-card {
    background: var(--card-bg);
    padding: 2rem;
    border-radius: 15px;
    box-shadow: 0 8px 25px var(--shadow);
    text-align: center;
    transition: all 0.3s ease;
    border-top: 4px solid transparent;
}

.value-card:hover {
    transform: translateY(-8px);
    border-top-color: #FFD700;
    box-shadow: 0 15px 35px rgba(0, 0, 0, 0.12);
}

.value-icon {
    width: 70px;
    height: 70px;
    background: linear-gradient(135deg, #2c5f2d 0%, #97bc62 100%);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 1.5rem;
    font-size: 1.8rem;
}

.value-card h3 {
    color: #2c5f2d;
    margin-bottom: 1rem;
    font-size: 1.1rem;
}

.value-card p {
    color: #666;
    font-size: 0.85rem;
}

/* Services Grid */
.services-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 1.5rem;
    margin-top: 2rem;
}

.service-card {
    background: linear-gradient(135deg, #2c5f2d 0%, #4a9c4a 100%);
    color: white;
    padding: 2.5rem 2rem;
    border-radius: 15px;
    transition: all 0.3s ease;
}

.service-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 15px 35px rgba(44, 95, 45, 0.3);
}

.service-icon {
    font-size: 2.5rem;
    margin-bottom: 1.5rem;
}

.service-card h3 {
    margin-bottom: 1rem;
    font-size: 1.2rem;
    color: #FFD700;
}

.service-card p {
    opacity: 0.9;
    font-size: 0.9rem;
}

/* Areas of Work & SDGs - Creative Grid */
/* Areas of Work - Minimalist Clean */
.areas-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    margin-top: 4rem;
}

.area-card {
    background: transparent;
    /* Remove heavy card bg */
    padding: 2rem;
    border-radius: 20px;
    text-align: center;
    transition: all 0.4s ease;
    border: 1px solid rgba(0, 0, 0, 0.05);
    /* Very subtle border */
    position: relative;
    z-index: 1;
}

[data-theme="dark"] .area-card {
    border-color: rgba(255, 255, 255, 0.1);
}

.area-card:hover {
    background: var(--card-bg);
    /* Only show bg on hover */
    transform: translateY(-5px);
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.08);
    /* Float effect */
    border-color: transparent;
}

.area-icon {
    font-size: 2.8rem;
    margin-bottom: 1.5rem;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 80px;
    height: 80px;
    background: rgba(44, 95, 45, 0.05);
    /* Very faint green bg */
    border-radius: 24px;
    /* Soft square */
    color: var(--primary-color);
    transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
}

.area-card:hover .area-icon {
    background: var(--primary-color);
    color: white;
    transform: rotate(5deg) scale(1.1);
    box-shadow: 0 10px 20px rgba(44, 95, 45, 0.2);
}

.area-card h4 {
    color: var(--text-color);
    font-size: 1.1rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
    letter-spacing: -0.01em;
}

[data-theme="dark"] .area-card h4 {
    color: white;
}

/* Gallery Section */
.gallery-section {
    background: var(--section-bg);
    padding: 3rem 1.5rem;
}

.gallery-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1.5rem;
    max-width: 1400px;
    margin: 2rem auto 0;
}

.gallery-item {
    position: relative;
    overflow: hidden;
    border-radius: 15px;
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
    transition: all 0.3s ease;
    height: 200px;
}

.gallery-item:hover {
    transform: translateY(-8px);
    box-shadow: 0 15px 35px rgba(0, 0, 0, 0.15);
}

.gallery-item img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
}

.gallery-item:hover img {
    transform: scale(1.05);
}

.gallery-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, rgba(44, 95, 45, 0.8) 0%, rgba(44, 95, 45, 0.6) 100%);
    display: flex;
    align-items: flex-end;
    padding: 1.5rem;
    opacity: 0;
    transition: opacity 0.3s ease;
}

.gallery-item:hover .gallery-overlay {
    opacity: 1;
}

.gallery-text {
    color: white;
    font-size: 0.85rem;
    font-weight: 600;
}

/* Testimonials Section */
.testimonials-section {
    background: linear-gradient(135deg, #2c5f2d 0%, #3d7a3d 100%);
    padding: 3rem 1.5rem;
    color: white;
}

.testimonials-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
    max-width: 1400px;
    margin: 2rem auto 0;
}

.testimonial-card {
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    padding: 2rem;
    border-radius: 15px;
    border: 1px solid rgba(255, 255, 255, 0.2);
    transition: all 0.3s ease;
}

.testimonial-card:hover {
    background: rgba(255, 255, 255, 0.15);
    transform: translateY(-8px);
    box-shadow: 0 15px 35px rgba(0, 0, 0, 0.2);
}

.stars {
    color: #FFD700;
    font-size: 1.2rem;
    margin-bottom: 1rem;
    letter-spacing: 2px;
}

.testimonial-text {
    font-size: 0.9rem;
    line-height: 1.8;
    margin-bottom: 1.5rem;
    opacity: 0.9;
    font-style: italic;
}

.testimonial-author {
    display: flex;
    align-items: center;
    gap: 1rem;
}

.author-avatar {
    width: 50px;
    height: 50px;
    border-radius: 50%;
    background: linear-gradient(135deg, #FFD700 0%, #f4d03f 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: bold;
    color: #2c5f2d;
    font-size: 1.2rem;
    flex-shrink: 0;
}

.author-info h4 {
    color: #FFD700;
    font-size: 0.95rem;
    margin-bottom: 0.2rem;
}

.author-info p {
    font-size: 0.8rem;
    opacity: 0.7;
}

/* Success Stories Section */
/* Success Stories Section - Dynamic Scrolling */
.stories-section {
    background: var(--section-bg);
    padding: 3rem 0;
    /* Full width scroll so remove side padding */
    overflow: hidden;
    /* Hide scrollbar */
}

.stories-container {
    max-width: 100%;
    margin: 0 auto;
}

.stories-container .section-title,
.stories-container .section-subtitle {
    max-width: 1400px;
    margin-left: auto;
    margin-right: auto;
    padding: 0 1.5rem;
}

.stories-scroll-wrapper {
    width: 100%;
    overflow: hidden;
    margin-top: 3rem;
    padding-bottom: 2rem;
    /* Space for shadow */
    position: relative;
    /* Soft edges mask */
    mask-image: linear-gradient(to right, transparent, black 10%, black 90%, transparent);
    -webkit-mask-image: linear-gradient(to right, transparent, black 10%, black 90%, transparent);
}

.stories-track {
    display: flex;
    gap: 3rem;
    width: max-content;
    /* Animation duration adjusts speed */
    animation: scroll 40s linear infinite;
}

/* Pause animation on hover for readability */
.stories-scroll-wrapper:hover .stories-track {
    animation-play-state: paused;
}

@keyframes scroll {
    0% {
        transform: translateX(0);
    }

    100% {
        /* Move half the track width (assuming duplicates exist) */
        /* Ajustar isto dependendo do nÃºmero de items duplicados. 
           Se duplicamos tudo, deve ser -50%. Se clonamos menos, ajustar.
           Vamos assumir -50% se clonamos o conjunto todo. */
        transform: translateX(-50%);
    }
}

.story-card {
    background: var(--card-bg);
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 8px 15px rgba(0, 0, 0, 0.08);
    /* Softer shadow */
    transition: all 0.3s ease;
    display: flex;
    /* Flexbox for better height handling */
    flex-direction: column;
    /* Stack vertically on small, row on large */
    width: 400px;
    /* Narrower but taller */
    flex-shrink: 0;
    border: 1px solid var(--border-color);
}

.story-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 15px 35px rgba(0, 0, 0, 0.15);
}

.story-image {
    width: 100%;
    height: 240px;
    /* Fixed height for image area */
    object-fit: cover;
    /* Cover is fine if focused */
    object-position: top center;
    /* Focus on faces usually at top */
    transition: transform 0.5s ease;
    border-bottom: 4px solid var(--accent-color);
}

.story-card:hover .story-image {
    transform: scale(1.05);
    /* Gentle zoom */
}

.story-content {
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    flex-grow: 1;
    /* Fill remaining space */
    background: var(--card-bg);
}

.story-content h3 {
    color: var(--primary-color);
    font-size: 1.2rem;
    margin-bottom: 0.8rem;
    font-weight: 700;
}

[data-theme="dark"] .story-content h3 {
    color: var(--accent-color);
}

.story-content p {
    color: var(--light-text);
    margin-bottom: 1rem;
    line-height: 1.5;
    font-size: 0.9rem;
    /* Clamp text */
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
}

.story-highlight {
    background: rgba(44, 95, 45, 0.08);
    padding: 0.8rem;
    border-left: 3px solid var(--accent-color);
    border-radius: 6px;
    font-size: 0.85rem;
}

[data-theme="dark"] .story-highlight {
    background: rgba(255, 255, 255, 0.05);
}

.story-highlight strong {
    color: var(--primary-color);
    margin-right: 0.5rem;
}

[data-theme="dark"] .story-highlight strong {
    color: var(--accent-color);
}

@media (max-width: 900px) {
    .story-card {
        width: 85vw;
        /* Almost full width on mobile */
        grid-template-columns: 1fr;
        height: auto;
    }

    .story-image {
        height: 180px;
    }

    .stories-track {
        gap: 1.5rem;
        animation: scroll 20s linear infinite;
        /* Faster on mobile? or same */
    }
}



/* Projects Grid */
.projects-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 1.5rem;
    margin-top: 2rem;
}

.project-card {
    background: var(--card-bg);
    border-radius: 15px;
    overflow: hidden;
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
    transition: all 0.3s ease;
}

.project-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 15px 35px rgba(0, 0, 0, 0.15);
}

.project-image {
    width: 100%;
    height: 200px;
    object-fit: cover;
    background: linear-gradient(135deg, #2c5f2d 0%, #4a9c4a 100%);
}

.project-header {
    background: linear-gradient(135deg, #2c5f2d 0%, #4a9c4a 100%);
    color: white;
    padding: 1.5rem;
    display: flex;
    align-items: center;
    gap: 1rem;
}

.project-icon {
    font-size: 2rem;
    flex-shrink: 0;
}

.project-header h3 {
    font-size: 1.05rem;
    color: #FFD700;
}

.project-body {
    padding: 1.5rem;
}

.project-body p {
    color: var(--light-text);
    font-size: 0.9rem;
}

.project-tag {
    display: inline-block;
    background: var(--section-bg);
    color: var(--primary-color);
    padding: 0.4rem 1rem;
    border-radius: 20px;
    font-size: 0.75rem;
    font-weight: 600;
    margin-top: 1rem;
}

/* SDGs Section */
.sdgs-section {
    background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
    padding: 3rem 1.5rem;
}

.sdgs-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1.5rem;
    max-width: 1400px;
    margin: 2rem auto 0;
}

.sdg-item {
    background: var(--card-bg);
    padding: 2rem 1.5rem;
    border-radius: 15px;
    text-align: center;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
    transition: all 0.3s ease;
    border-top: 4px solid #FFD700;
}

.sdg-item:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.12);
}

.sdg-number {
    width: 60px;
    height: 60px;
    background: linear-gradient(135deg, #2c5f2d 0%, #97bc62 100%);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 1rem;
    font-size: 1.5rem;
    font-weight: bold;
    color: #FFD700;
}

.sdg-item h4 {
    color: #2c5f2d;
    font-size: 0.9rem;
    font-weight: 600;
}

/* Help Section */
.help-section {
    background: linear-gradient(135deg, #2c5f2d 0%, #3d7a3d 100%);
    color: white;
    padding: 3rem 1.5rem;
    position: relative;
    overflow: hidden;
}

.help-section::before {
    content: '';
    position: absolute;
    top: -50%;
    right: -20%;
    width: 400px;
    height: 400px;
    background: rgba(255, 215, 0, 0.05);
    border-radius: 50%;
}

.help-section::after {
    content: '';
    position: absolute;
    bottom: -30%;
    left: -10%;
    width: 300px;
    height: 300px;
    background: rgba(255, 215, 0, 0.05);
    border-radius: 50%;
}

.help-content {
    max-width: 1400px;
    margin: 0 auto;
    position: relative;
    z-index: 1;
}

.help-section h2 {
    font-size: clamp(1.8rem, 4vw, 2.5rem);
    margin-bottom: 1rem;
    text-align: center;
}

.help-section>.help-content>p {
    text-align: center;
    font-size: clamp(1rem, 2vw, 1.2rem);
    margin-bottom: 2rem;
    opacity: 0.9;
}

.help-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1.5rem;
}

.help-card {
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    padding: 2rem 1.5rem;
    border-radius: 15px;
    text-align: center;
    transition: all 0.3s ease;
    border: 1px solid rgba(255, 255, 255, 0.1);
}

.help-card:hover {
    background: rgba(255, 255, 255, 0.15);
    transform: translateY(-5px);
}

.help-icon {
    font-size: 2.5rem;
    margin-bottom: 1rem;
}

.help-card h3 {
    margin-bottom: 1rem;
    font-size: 1.1rem;
    color: #FFD700;
}

.help-card p {
    opacity: 0.85;
    font-size: 0.85rem;
}

/* Footer */
footer {
    background: #1a3a1a;
    color: white;
    text-align: center;
    padding: 2rem 1.5rem;
}

.footer-logo {
    font-size: 1.3rem;
    font-weight: bold;
    margin-bottom: 1rem;
    color: #FFD700;
}

footer p {
    opacity: 0.7;
    font-size: 0.9rem;
}

.footer-quote {
    font-style: italic;
    margin-top: 1rem;
    opacity: 0.8 !important;
    font-size: 0.95rem !important;
}

/* Forms & Interaction Styling */
.action-cards-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1.5rem;
    margin-bottom: 3rem;
}

.action-card {
    background: rgba(255, 255, 255, 0.15);
    backdrop-filter: blur(5px);
    padding: 2rem;
    border-radius: 12px;
    text-align: center;
    cursor: pointer;
    transition: transform 0.3s, background 0.3s;
    border: 1px solid rgba(255, 255, 255, 0.1);
}

.action-card:hover {
    transform: translateY(-5px);
    background: rgba(255, 255, 255, 0.25);
}

.action-icon {
    font-size: 2.5rem;
    margin-bottom: 1rem;
}

.forms-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
}

.form-box {
    background: var(--card-bg);
    padding: 2rem;
    border-radius: 15px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
}

.form-box h3 {
    color: #2c5f2d;
    margin-bottom: 1.5rem;
    text-align: center;
}

.form-group {
    margin-bottom: 1rem;
}

.form-group label {
    display: block;
    margin-bottom: 0.5rem;
    color: var(--light-text);
    font-weight: 500;
    font-size: 0.9rem;
}

.form-group input,
.form-group textarea,
.form-group select {
    width: 100%;
    padding: 0.8rem;
    border: 1px solid var(--border-color);
    background: var(--bg-color);
    color: var(--text-color);
    border-radius: 8px;
    font-family: inherit;
    font-size: 0.95rem;
    transition: border-color 0.3s;
}

.form-group input:focus,
.form-group textarea:focus,
.form-group select:focus {
    outline: none;
    border-color: #2c5f2d;
    box-shadow: 0 0 0 3px rgba(44, 95, 45, 0.1);
}

.submit-btn {
    width: 100%;
    margin-top: 0.5rem;
    background: #2c5f2d !important;
    color: white !important;
    border: 2px solid #2c5f2d !important;
    font-weight: bold;
}

.submit-btn:hover {
    background: #1e4a22 !important;
    border-color: #1e4a22 !important;
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
}

/* Modal Styles */
.modal {
    display: none;
    position: fixed;
    z-index: 2000;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.7);
    animation: fadeIn 0.3s;
    align-items: center;
    justify-content: center;
}

.modal-content {
    background-color: var(--card-bg);
    padding: 2.5rem;
    border-radius: 15px;
    width: 90%;
    max-width: 500px;
    position: relative;
    animation: slideDown 0.3s;
    text-align: center;
}

.close-modal {
    position: absolute;
    right: 1.5rem;
    top: 1rem;
    font-size: 1.8rem;
    font-weight: bold;
    color: #aaa;
    cursor: pointer;
    transition: color 0.3s;
}

.close-modal:hover {
    color: #333;
}

.payment-options {
    margin-top: 1.5rem;
    display: flex;
    flex-direction: column;
    gap: 1rem;
}

.payment-option {
    padding: 1rem;
    border: 2px solid var(--border-color);
    border-radius: 10px;
    text-align: left;
    transition: border-color 0.3s;
}

.payment-option:hover {
    border-color: #FFD700;
}

.payment-option.mpesa {
    border-left: 5px solid #E60000;
    /* Vodacom Red */
}

.payment-option.bank {
    border-left: 5px solid #2c5f2d;
}

.payment-option .highlight {
    font-size: 1.1rem;
    font-weight: bold;
    color: #2c5f2d;
}

@keyframes fadeIn {
    from {
        opacity: 0;
    }

    to {
        opacity: 1;
    }
}

@keyframes slideDown {
    from {
        transform: translateY(-30px);
        opacity: 0;
    }

    to {
        transform: translateY(0);
        opacity: 1;
    }
}

/* Mobile Adjustments */
@media (max-width: 768px) {
    .menu-toggle {
        display: block;
    }

    .nav-links {
        display: none;
        position: absolute;
        top: 70px;
        left: 0;
        right: 0;
        background: linear-gradient(135deg, #2c5f2d 0%, #3d7a3d 100%);
        flex-direction: column;
        gap: 0;
        padding: 1rem;
        border-bottom: 2px solid #FFD700;
    }

    .nav-links.active {
        display: flex;
    }

    .nav-links a {
        padding: 1rem;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }

    .logo {
        font-size: 1rem;
        gap: 8px;
    }

    .logo img {
        height: 40px;
    }

    .logo-text small {
        display: none;
    }

    .hero {
        padding: 100px 1rem 60px;
        margin-top: 60px;
    }

    .hero h1 {
        margin-bottom: 1rem;
    }

    .hero p {
        margin-bottom: 1.5rem;
    }

    .cta-buttons {
        gap: 0.8rem;
    }

    .btn {
        padding: 0.8rem 1.5rem;
        font-size: 0.9rem;
    }

    .container {
        padding: 2rem 1rem;
    }

    .about-content,
    .vision-mission-grid,
    .story-card {
        grid-template-columns: 1fr;
    }

    .values-grid,
    .services-grid,
    .areas-grid,
    .gallery-grid,
    .testimonials-grid,
    .stories-grid,
    .projects-grid,
    .sdgs-grid,
    .help-grid,
    .forms-grid {
        grid-template-columns: 1fr;
    }

    .section-title {
        font-size: 1.8rem;
    }

    .story-image {
        min-height: 200px;
    }

    .story-content {
        padding: 1.5rem;
    }

    .project-header {
        flex-wrap: wrap;
    }

    .gallery-item {
        height: 180px;
    }
}

@media (max-width: 480px) {
    header {
        padding: 0.6rem 0.8rem;
    }

    nav {
        padding: 0 0.5rem;
    }

    .logo {
        gap: 6px;
    }

    .logo img {
        height: 35px;
    }

    .logo-text strong {
        font-size: 0.85rem;
    }

    .hero {
        padding: 80px 1rem 50px;
        margin-top: 55px;
    }

    .hero h1 {
        font-size: 1.8rem;
    }

    .hero p {
        font-size: 1rem;
    }

    .btn {
        padding: 0.7rem 1.2rem;
        font-size: 0.85rem;
    }

    .container {
        padding: 1.5rem 1rem;
    }

    .section-title {
        font-size: 1.5rem;
    }

    .about-text,
    .vm-card {
        padding: 1.5rem;
    }

    .value-card,
    .service-card {
        padding: 1.5rem 1rem;
    }

    .testimonial-card,
    .help-card {
        padding: 1.5rem 1rem;
    }

    .story-content {
        padding: 1rem;
    }

    .project-body {
        padding: 1rem;
    }

    .gallery-item {
        height: 150px;
    }

    .gallery-text {
        font-size: 0.75rem;
    }
}

/* Back to Top Button */
.back-to-top {
    position: fixed;
    bottom: 30px;
    right: 30px;
    background: #2c5f2d;
    color: #FFD700;
    width: 50px;
    height: 50px;
    border-radius: 50%;
    border: none;
    cursor: pointer;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.2rem;
    opacity: 0;
    visibility: hidden;
    transition: all 0.3s ease;
    z-index: 1000;
}

.back-to-top.visible {
    opacity: 1;
    visibility: visible;
}

.back-to-top:hover {
    background: #FFD700;
    color: #2c5f2d;
    transform: translateY(-5px);
}

/* Copy Button Styles */
.copy-btn {
    background: none;
    border: none;
    color: #2c5f2d;
    cursor: pointer;
    margin-left: 10px;
    padding: 5px;
    transition: transform 0.2s;
    font-size: 1rem;
}

.copy-btn:hover {
    transform: scale(1.2);
    color: #4a9c4a;
}

.payment-option p {
    display: flex;
    align-items: center;
    flex-wrap: wrap;

}

/* SDGs - Modern Corporate Minimalist */
.sdgs-section {
    padding: 5rem 1.5rem;
    background: var(--bg-color);
    /* Seamless integration */
}

.sdgs-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(130px, 1fr));
    /* Compact tiles */
    gap: 1.5rem;
    max-width: 1000px;
    /* Tighter focus */
    margin: 3rem auto 0;
}

.sdg-item {
    aspect-ratio: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 1rem;
    background: var(--card-bg);
    /* Use card-bg instead of hardcoded white */
    border: 1px solid var(--border-color);
    border-radius: 12px;
    position: relative;
    overflow: hidden;
    transition: all 0.3s ease;
}

/* Minimal number watermark */
.sdg-number {
    position: absolute;
    top: -5px;
    right: 5px;
    font-size: 3.5rem;
    font-weight: 900;
    opacity: 0.05;
    /* Watermark effect */
    color: var(--text-color);
    transition: opacity 0.3s;
    font-family: sans-serif;
    /* Reset previous styles */
    width: auto;
    height: auto;
    background: none;
    border-radius: 0;
    margin: 0;
    display: block;
}

.sdg-item h4 {
    font-size: 0.85rem;
    font-weight: 700;
    text-transform: uppercase;
    text-align: center;
    line-height: 1.3;
    z-index: 1;
    color: var(--text-color);
    margin: 0;
    /* Reset */
}

/* Color Accent Bar on Bottom (Classic Minimal) */
.sdg-item::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 4px;
    background: #ccc;
    /* Default grey */
    transition: height 0.3s ease;
}

/* Hover Effects */
.sdg-item:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.08);
    /* Softer shadow */
}

.sdg-item:hover .sdg-number {
    opacity: 0.15;
    transform: scale(1.1);
}

/* Specific Colors on Hover Active State */
.sdg-item:nth-child(1)::after {
    background: #E5243B;
}

.sdg-item:nth-child(2)::after {
    background: #DDA63A;
}

.sdg-item:nth-child(3)::after {
    background: #4C9F38;
}

.sdg-item:nth-child(4)::after {
    background: #C5192D;
}

.sdg-item:nth-child(5)::after {
    background: #FF3A21;
}

.sdg-item:nth-child(6)::after {
    background: #26BDE2;
}

.sdg-item:nth-child(7)::after {
    background: #A21942;
}

.sdg-item:nth-child(8)::after {
    background: #DD1367;
}

.sdg-item:hover::after {
    height: 6px;
    /* Slightly thicker on hover */
}